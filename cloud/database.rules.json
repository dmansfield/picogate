{
  "rules": {
    ".read": "auth != null && root.child('invited_users').child(auth.token.email.replace('.','_')).exists()",
    ".write": "auth != null && root.child('invited_users').child(auth.token.email.replace('.','_')).exists()",
    "garage": {
      "status": {
        ".validate": "newData.val() == 'OPEN' || newData.val() == 'CLOSED'"
      },
      "command": {
        ".validate": "newData.val() == 'TRIGGER' || newData.val() == 'IDLE'"
      },
      "last_event": {
        ".validate": "newData.isNumber()"
      }
    }
  }
}
